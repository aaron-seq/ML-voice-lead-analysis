# ML Voice Lead Analysis - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="ML Voice Lead Analysis"
APP_VERSION=4.0.0

# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
DATA_BUCKET=ml-voice-analysis-bucket
S3_BUCKET_NAME=ml-voice-analysis-bucket

# For local development without AWS, set this to true
DISABLE_AWS_CHECKS=false

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=voice_analysis
POSTGRES_USER=voice_user
POSTGRES_PASSWORD=voice_password_change_in_production
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# Connection string for backend
DATABASE_URL=postgresql+asyncpg://voice_user:voice_password_change_in_production@postgres:5432/voice_analysis

# For local development with SQLite (if PostgreSQL not available)
# DATABASE_URL=sqlite+aiosqlite:///./voice_analysis.db

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# For local development with password
# REDIS_URL=redis://:your_password@redis:6379/0

# ============================================
# Security
# ============================================
SECRET_KEY=change-this-to-a-secure-random-string-minimum-32-characters-long
JWT_SECRET_KEY=change-this-to-another-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# ML Model Configuration
# ============================================
ML_MODEL_PATH=/app/models
SPACY_MODEL=en_core_web_md
USE_TRANSFORMERS=false
CLOUD_DEPLOYMENT=false

# ============================================
# API Configuration
# ============================================
BACKEND_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
MAX_REQUEST_SIZE_MB=100
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=3000
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME="ML Voice Lead Analysis"
NEXT_PUBLIC_VERSION=3.1.0
NEXT_TELEMETRY_DISABLED=1

# ============================================
# Docker Configuration
# ============================================
BUILD_TARGET=development
VOLUME_MODE=rw
COMPOSE_PROJECT_NAME=ml-voice-analysis

# ============================================
# Monitoring (Optional)
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin123

# ============================================
# Nginx Configuration (Production)
# ============================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Background Tasks
# ============================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================
# External Services (Optional)
# ============================================
SENTRY_DSN=
OPENAI_API_KEY=

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:
TEST_REDIS_URL=redis://redis:6379/15
