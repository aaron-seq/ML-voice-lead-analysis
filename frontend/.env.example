# ML Voice Lead Analysis - Frontend Environment Configuration
# Copy this file to .env.local and customize values for your deployment

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application Settings
NEXT_PUBLIC_APP_NAME=ML Voice Lead Analysis
NEXT_PUBLIC_APP_VERSION=3.1.0
NEXT_PUBLIC_APP_DESCRIPTION=Advanced AI-powered sales call analysis platform

# Environment Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_SUPPORTED_FILE_FORMATS=json,txt,mp3,wav

# Authentication (if implementing)
NEXT_PUBLIC_AUTH_ENABLED=false
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Third-party Services (Optional)
# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Social/Meta Tags
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_TITLE=ML Voice Lead Analysis
NEXT_PUBLIC_SITE_DESCRIPTION=Transform sales conversations into actionable insights
NEXT_PUBLIC_AUTHOR=Aaron Sequeira

# Development Settings
NEXT_PUBLIC_MOCK_API_ENABLED=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Performance Settings
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_PREFETCH_ENABLED=true

# Deployment Platform Detection
VERCEL=
VERCEL_URL=
NETLIFY=
RAILWAY_ENVIRONMENT=
RENDER=

# Build Configuration
NEXT_BUILD_ID=
BUILD_ENV=development